<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondolistaa">

    <ImageView
        android:id="@+id/imgJuego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvLabelNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_juego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="0.5"
        android:textSize="45sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvLabelLanzamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanzamiento"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_lanzamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_margin="4dp"
        android:layout_weight="0.5"
        android:textSize="20sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvLabelPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="0.5"
        android:textSize="20sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvLabelGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="0.5"
        android:textSize="20sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvLabelValoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valoracion"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_valoracion"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="20sp" />


</LinearLayout>