<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue">

    <ImageView
        android:id="@+id/imgJuego"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />


    <TextView
        android:id="@+id/tvLabelNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#CCC5C5"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_juego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="0.5"
        android:textColor="#CCC5C5"
        android:textStyle="italic"
        android:textSize="30sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvLabelLanzamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanzamiento"
        android:textColor="#CCC5C5"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_lanzamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textColor="#CCC5C5"
        android:textStyle="italic"
        android:layout_margin="4dp"
        android:layout_weight="0.5"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvLabelPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textColor="#CCC5C5"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="#CCC5C5"
        android:textStyle="italic"
        android:layout_weight="0.5"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvLabelGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Género"
        android:textColor="#CCC5C5"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="#CCC5C5"
        android:textStyle="italic"
        android:layout_weight="0.5"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvLabelValoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valoración"
        android:textColor="#CCC5C5"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingBottom="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_valoracion"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textColor="#CCC5C5"
        android:textStyle="italic"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="30sp" />


</LinearLayout>